<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/DefaultTextViewFont</item>
        <item name="android:editTextStyle">@style/DefaultEditTextFont</item>
        <item name="android:buttonStyle">@style/DefaultButtonFont</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextLabel" parent="Theme.Design">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="DefaultTextViewFont" parent="android:Widget.TextView">
        <item name="fontFamily">@font/helveticalight</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefaultEditTextFont" parent="android:Widget.EditText">
        <item name="fontFamily">@font/helveticalight</item>
    </style>

    <style name="DefaultButtonFont" parent="android:Widget.Button">
        <item name="fontFamily">@font/helveticalight</item>
    </style>

</resources>
