<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menus.Register_Page1"
        android:descendantFocusability="beforeDescendants"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/register_background">


    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.025"
            app:layout_constraintHorizontal_bias="0.065"
            app:srcCompat="@drawable/all_back"
            android:onClick="registerP1OnClick"
            android:id="@+id/registerP1Back"/>


    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.025"
            app:layout_constraintHorizontal_bias="0.935"
            app:srcCompat="@drawable/all_cancel"
            android:onClick="registerP1OnClick"
            android:id="@+id/registerP1Cancel"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.10"
            android:text="@string/registerPersInfoText"
            android:textSize="35sp"
            android:textAlignment="center"
            android:id="@+id/registerPersonalInfoText"/>

    <!-- Input First Name Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="295dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.25"
            android:id="@+id/registerFirstNameInput"
            android:theme="@style/TextLabel"
            app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/registerFirstNameHint"
                android:inputType="textPersonName"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLength="25"
                android:visibility="visible"
                android:singleLine="true"
                android:textSize="20sp"/>
    </android.support.design.widget.TextInputLayout>


    <!-- Input Last Name Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="295dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35"
            android:id="@+id/registerLastNameInput"
            android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/registerLastNameHint"
                android:inputType="textPersonName"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLength="25"
                android:visibility="visible"
                android:singleLine="true"
                android:textSize="20sp"/>
    </android.support.design.widget.TextInputLayout>


    <!-- Input Email Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="295dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.45"
            android:id="@+id/registerEmailInput"
            android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/registerEmailHint"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@._-0123456789"
                android:maxLength="30"
                android:visibility="visible"
                android:singleLine="true"
                android:textSize="20sp"/>
    </android.support.design.widget.TextInputLayout>


    <!-- Input Institution Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="295dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.55"
            android:id="@+id/registerInstitutionInput"
            android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/registerInstitutionHint"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:maxLength="25"
                android:visibility="visible"
                android:singleLine="true"
                android:textSize="20sp"/>
    </android.support.design.widget.TextInputLayout>


    <!-- Input Area of Investigation Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="295dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.65"
            android:id="@+id/registerInvestigationInput"
            android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/registerInvestigationHint"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:maxLength="25"
                android:visibility="visible"
                android:singleLine="true"
                android:textSize="20sp"/>
    </android.support.design.widget.TextInputLayout>


    <!-- Input Research Center Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="295dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.75"
            android:id="@+id/registerResearchCenter"
            android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/registerResearchCenter"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:maxLength="25"
                android:visibility="visible"
                android:singleLine="true"
                android:textSize="20sp"/>
    </android.support.design.widget.TextInputLayout>


    <!-- Input ORCID Field -->
    <android.support.design.widget.TextInputLayout
            android:layout_width="295dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.85"
            android:id="@+id/registerORCIDInput"
            android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/registerORCIDHint"
                android:inputType="number"
                android:maxLength="16"
                android:visibility="visible"
                android:singleLine="true"
                android:textSize="20sp"/>
    </android.support.design.widget.TextInputLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintHorizontal_bias="0.90"
            android:text="@string/registerNextPage"
            android:textSize="30sp"
            android:onClick="registerP1OnClick"
            android:id="@+id/registerNextPage1"/>


</android.support.constraint.ConstraintLayout>